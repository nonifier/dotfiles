[status]
    showStat = true
    showUntrackedFiles = all
    showStash = false
    submoduleSummary = true

[submodule]
	recurse = true

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[pull]
	rebase = true

[rebase]
    updateRefs = true

[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[mergetool "nvimdiff4"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
    prompt = true

[diff]
    algorithm = minimal
    tool = nvimdiff

[merge]
	tool = nvimdiff4

